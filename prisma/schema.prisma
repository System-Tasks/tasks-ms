generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  PENDING
  PROGRESS
  COMPLETED
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String
  status      TaskStatus
  dateLimit   DateTime?
  projectId   String

  comments Comment[] // Relaci√≥n inversa con Comment

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id          String @id @default(uuid())
  description String
  taskId      String
  task        Task   @relation(fields: [taskId], references: [id])
  userId      String
}
